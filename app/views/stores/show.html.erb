<section class="section store-section stay-centered">
  <div class="container">
    <figure class="image out-relative">
      <img src="http://via.placeholder.com/1600x900" alt="placeholder" class="store-picture">
        <div class="card card-fix">
            <div class="card-content">
            <div class="media">
                <div class="media-left">
                <figure class="image is-48x48">
                    <img src="http://via.placeholder.com/48x48" alt="placeholder">
                </figure>
                </div>
                <div class="media-content">
                <p class="title is-4"><%= @store.name %></p>
                <p class="subtitle is-6">@kevingu</p>
                </div>
            </div>
            <div class="content has-description">
                <%= @store.description %>
            </div>
            <div class="content">
                地址：<%= @store.address %> <br>
                電話：<%= @store.phone %>
            </div>
            </div>
            <div class="card-footer">
            <div class="card-footer-item">
                <%= link_to '編輯', edit_store_path(@store) %>
            </div>
            <div class="card-footer-item">
                <%= link_to '刪除', store_path(@store), method: :delete, data: {confirm: '確定要刪除嗎？'} %>
            </div>
            </div>
        </div>
    </figure>
  </div>
</section>

<section class="section store-section stay-centered">
  <div class="container">
    <div class="columns">
      <div class="column is-7">
        <div class="columns is-multiline">
          <% @store.items.each do |item| %>
            <div class="column is-4">
              <div class="card">
                <div class="card-image">
                  <%= link_to edit_store_item_path(@store, item) do %>
                    <figure class="image is-2by1">
                      <img src="http://via.placeholder.com/1600x900" alt="placeholder">
                    </figure>
                  <% end %>
                </div>
                <div class="card-content">
                  <div><%= item.name %></div>
                  <div class="title is-4">$<%= item.price %></div>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      </div>
      <div class="column is-5">
        <div class="card">
          <div class="card-content">
            <h1 class="title is-5">新增菜單</h1>
            <%= form_for Item.new, url:store_items_path(@store) do |f| %>
              <div class="field">
                <%= f.label :name, '名稱', class:'label' %>
                <div class="control">
                  <%= f.text_field :name, class:'input' %>
                </div>
              </div>

              <div class="field">
                <%= f.label :price, '價格', class:'label' %>
                <div class="control">
                  <%= f.text_field :price, class:'input' %>
                </div>
              </div>

              <div class="field">
                <%= f.label :logo, '圖片', class:'label' %>
                <div class="control">
                  <%= f.file_field :logo %>
                </div>
              </div>

              <div class="field">
                <%= f.submit '確定',class:'button style-1 is-medium is-fullwidth' %>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
