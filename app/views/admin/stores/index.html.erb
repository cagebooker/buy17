<div class="outsider">
  <div class="columns">
    <div class="column is-6">
      <div class="title is-5">您的店家</div>
      <% @stores.each do |store| %>
        <div class="card columns">
          <div class="card-image column is-6">
            <%= link_to '#' do  %>
              <%= link_to edit_admin_store_path(store) do %>
                <figure class="image is-4by3">
                  <img src="https://bulma.io/images/placeholders/1280x960.png" alt="Placeholder image">
                </figure>
              <% end %>
            <% end %>
            
          </div>
          <div class="card-content column is-6">
            <div class="media">
              <div class="media-content">
                <%= link_to edit_admin_store_path(store) do %>
                  <p class="title is-4"><%= store.name %></p>
                <% end %>
                
                <p class="subtitle is-6"><%= store.user.email %></p>
              </div>
            </div>

            <div class="content">
              建立的時間：
              <time datetime="2016-1-1"><%= store.created_at %></time>
            </div>
          </div>
        </div>
        <br>
      <% end %>
    </div>
    <div class="column is-6">
       <div class="title is-5">
        您的訂單：
       </div>
    </div>
  </div>
</div>