<div class="outsider">
  <div class="columns">
    <div class="column is-6">
      <div class="title is-5">您管理的店家：</div>
      <% if @stores.present? %>
        <% @stores.each do |store| %>
          <div class="card columns">
            <div class="card-image column is-6">
              <%= link_to '#' do  %>
                <%= link_to edit_admin_store_path(store) do %>
                  <figure class="image is-4by3">
                    <% if store.cover.attached? %>
                      <%= image_tag store.cover.variant(resize: '960x720') %>
                    <% else %>
                      <img src="https://bulma.io/images/placeholders/1280x960.png" alt="Placeholder image">
                    <% end %>
                  </figure>
                <% end %>
              <% end %>
              
            </div>
            <div class="card-content column is-6">
              <div class="media">
                <div class="media-content">
                  <%= link_to edit_admin_store_path(store) do %>
                    <p class="title is-4">
                      <%= store.name %> | 
                      <% if store.state == 'online' %>
                        <span class="state-online title is-6">上線</span>
                      <% elsif store.state == "offline" %>
                        <span class="state-offline title is-6">關閉中</span>
                      <% else %>
                        <span class="state-pending title is-6">準備中</span>
                      <% end %>
                      
                    </p>
                  <% end %>
                  
                  <p class="subtitle is-6"><%= store.user.email %></p>
                </div>
              </div>

              <div class="content">
                建立的時間：
                <time datetime="2016-1-1"><%= store.created_at.strftime("%Y/%m/%d %H:%M") %></time>
              </div>
            </div>
          </div>
          <br>
        <% end %>  
        
      <% else %>
        <%= link_to '開始你的店家', new_admin_store_path, class:'button' %>
      <% end %>
      
      
    </div>
    <div class="column is-6">
       <div class="title is-5 mb-2">
        您的訂單：
       </div>
       <div class="box height-fix-1">
        今日(<%= Time.now.strftime("%Y/%m/%d") %>)未完成訂單： 
        <% @purchases_pending.each do |purchase| %>
          <div class="box">
            <%= purchase.store.name %> | 
            <% if purchase.state == 'pending' %>
              <span class="state-p">等待中</span>
              | 訂單送出時間：<%= purchase.end_time.strftime("%m/%d %I:%M") %>
            <% else %>
              <span class="state-p">已完成</span>
            <% end %>
            <br>
            訂單編號：<%= purchase.id %>,   訂購人： <%= purchase.user.email %>
            <% purchase.orders.each do |order| %>
              <% order.ordered_items.each do |order_item| %>
                <br>
                <%= order_item.item.name %> 數量：
                <%= order_item.quantity %> 
              <% end %>  
            <% end %>
            <br>
            <div class="columns mt-2">
              <div class="column is-9">
                <%= link_to '完成訂單',purchase_finished_path(purchase.group,purchase,{'purchase_id':purchase.id}),method: :post,class:'button is-small is-fullwidth' %>
              </div>
              <div class="column is-3">
                <%= link_to '空單取消',purchase_refunded_path(purchase.group,purchase,{'purchase_id':purchase.id}),method: :post,class:'button is-small is-fullwidth' %>
              </div>
            </div>
             
          </div>
        <% end %>
        
       
        
       </div>
       <div class="box height-fix-2">
        今日已完成訂單：
        <% @purchases_done.each do |purchase| %>
          <div class="box">
            <span class="state-f">已完成</span>
            <span>訂單編號： <%= purchase.id %></span>
            <span>總金額： <%= purchase.total_income %></span>
          </div>
        <% end %>
        
       </div>
    </div>
  </div>
</div>