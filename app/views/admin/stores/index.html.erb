<div class="outsider">
  <div class="columns">
    <div class="column is-6">
      <div class="title is-5">您的店家</div>
      <% if @stores.present? %>
        <% @stores.each do |store| %>
          <div class="card columns">
            <div class="card-image column is-6">
              <%= link_to '#' do  %>
                <%= link_to edit_admin_store_path(store) do %>
                  <figure class="image is-4by3">
                    <img src="https://bulma.io/images/placeholders/1280x960.png" alt="Placeholder image">
                  </figure>
                <% end %>
              <% end %>
              
            </div>
            <div class="card-content column is-6">
              <div class="media">
                <div class="media-content">
                  <%= link_to edit_admin_store_path(store) do %>
                    <p class="title is-4"><%= store.name %></p>
                  <% end %>
                  
                  <p class="subtitle is-6"><%= store.user.email %></p>
                </div>
              </div>

              <div class="content">
                建立的時間：
                <time datetime="2016-1-1"><%= store.created_at %></time>
              </div>
            </div>
          </div>
          <br>
        <% end %>  
      <% else %>
        <%= link_to '開始你的店家', new_admin_store_path, class:'button' %>
      <% end %>
      
      
    </div>
    <div class="column is-6">
       <div class="title is-5">
        您的訂單：
       </div>
       <div class="box">
        今日未完成訂單：
        <% @stores.each do |store| %>
          <% store.purchases.each do |purchase| %>
            <div class="box">
              <%= store.name %> <br>
              訂單編號： <%= purchase.id %>，  訂購人： <%= purchase.user.email %>
              <% purchase.orders.each do |order| %>
                <% order.ordered_items.each do |order_item| %>
                  <br>
                  <%= order_item.item.name %> 數量：
                  <%= order_item.quantity %> 
                <% end %>  
             <% end %>
             <br>
             <%= link_to '完成訂單','#',class:'button is-small is-fullwidth' %>
            </div>
            
          <% end %>
          
        <% end %>
        
       </div>
       <div class="box">
        今日已完成訂單：
        <% @stores.each do |store| %>
          <% store.purchases.each do |purchase| %>
            <div class="box">
              <span>訂單編號： <%= purchase.id %></span>
              <span>總金額： <%= purchase.total_income %></span>
            </div>
          
          <% end %>
          
        <% end %>
        
       </div>
    </div>
  </div>
</div>