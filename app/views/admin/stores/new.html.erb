<div class="outsider">
  <div class="title is-5">新增店家</div>
  <div class="box">
    <%= form_for [:admin,@store] do |f| %>
      <div class="columns">
      <div class="column is-6">
          <div class="field">
              <label class="label">商標</label>
              <input id="store_logo" type="file">
          </div>
          <div class="field">
              <label class="label">圖片</label>
              <input id="store_picture" type="file">
          </div>
      </div>
      <div class="column is-6">
          <div class="field">
              <%= f.label :name,'名稱', class:'label' %>
              <div class="control">
                  <%= f.text_field :name, class:'input' %>
                  <% @store.errors.full_messages_for(:name).each do |msg| %>
                      <p class="help is-danger"><%= msg %></p>
                  <% end %>
              </div>
          </div>
          <div class="field">
              <%= f.label :address,'地址', class:'label' %>
              <div class="control">
                  <%= f.text_field :address, class:'input' %>
                  <% @store.errors.full_messages_for(:address).each do |msg| %>
                      <p class="help is-danger"><%= msg %></p>
                  <% end %>
              </div>
          </div>
          <div class="field">
              <%= f.label :phone,'電話', class:'label' %>
              <div class="control">
                  <%= f.text_field :phone, class:'input' %>
                  <% @store.errors.full_messages_for(:phone).each do |msg| %>
                      <p class="help is-danger"><%= msg %></p>
                  <% end %>
              </div>
          </div>
          <div class="field">
              <%= f.label :description,'簡單描述', class:'label' %>
              <div class="control">
                  <%= f.text_area :description, class:'textarea' %>
                  <% @store.errors.full_messages_for(:description).each do |msg| %>
                      <p class="help is-danger"><%= msg %></p>
                  <% end %>
              </div>
          </div>
          <div class="field">
              <%= f.submit '送出', class:'button style-1 is-fullwidth' %>
              
          </div>
          <div class="field">
              
              <%= link_to "返回上一页", :back ,class:'button' %>
              
          </div>
      </div>
      </div>
    <% end %>
  </div>
  
</div>