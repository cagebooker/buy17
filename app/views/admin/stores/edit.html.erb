<div class="outsider">
  <h1 class="title is-4 title-dark"><%= t(:更新店家資訊) %> </h1>
  <div class="columns">
    <div class="column is-9">
      <div class="box background-light-gray border-white">
        <%= render 'form' %>
      </div>
    </div>
    <div class="column is-3">
      <div class="box background-light-gray">
        <div class="title is-5">
          <%= @store.name %> |
          <% if @store.state == 'online' %>
            <span class="state-online"> <%= t(:上線) %></span>
          <% elsif @store.state == "offline" %>
            <span class="state-offline title is-6"><%= t(:關閉中) %></span>
          <% else %>
            <span class="state-offline title is-6"><%= t(:準備中) %></span>
          <% end %>
        </div>
        <% if @store.state == 'online' %>
          <%= link_to admin_store_offline_path(@store),method: :post,class:'button button-dark is-dark is-small' do %>
            <%= t(:關閉店家) %>
          <% end %>
          
          <%= link_to admin_store_pending_path(@store),method: :post,class:'button is-info is-small is-outlined' do %>
            <%= t(:準備中) %>
          <% end %>
          
        <% elsif @store.state == "offline" %>
          <%= link_to admin_store_online_path(@store),method: :post,class:'button is-primary is-small is-outlined' do %>
            <%= t(:店家上線) %>
          <% end %>
          
        <% else %>
          <%= link_to admin_store_online_path(@store),method: :post,class:'button is-primary is-small is-outlined' do %>
            <%= t(:店家上線) %>
          <% end %>
          
          <%= link_to admin_store_offline_path(@store),method: :post,class:'button button-dark is-small is-outlined' do %>
            <%= t(:店家關閉) %>
          <% end %>
          
        <% end %>
      </div>
      <div class="box box-height-fix background-light-gray">
        <div class="title is-5">
          
          <%= link_to admin_store_items_path(@store),class:'button button-dark is-small is-fullwidth' do %>
            <span><%= t(:管理菜單) %></span>
          <% end %>
          <div class="divider"></div>
          <%= t(:目前的菜單) %>
        </div>
        
        <% @items.each do |item| %>
          <div class="list-item">
            <i class="fa-solid fa-utensils mr-2"></i> 
            <%= item.name %>
          </div>
          
        <% end %>
        
      </div>
    </div>
  </div>
  
  
</div>
  