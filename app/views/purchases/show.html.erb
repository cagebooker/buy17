<div class="outsider">
  <div class="columns">
    <div class="column is-8 is-offset-1">
      <div class="columns">
        <div class="column is-6">
          <h1 class="title is-4">菜單</h1>
          <% @purchase.store.items.each do|item| %>
            
            <div class="box is-fullwidth">
              <%= item.name %> $<%= item.price %>

            </div>
          <% end %>
        </div>

        <div class="column is-6">
          <div class="card">
            <div class="card-content">
              <div class="title is-5">團購：<%= @purchase.store.name %></div>
              <div class="">
                <i class="fa-solid fa-user mr-2"></i>
                <%= @purchase.user.email %> 發起
              </div>
              <div class="">
                <i class="fa-regular fa-clock mr-2"></i>
                截止時間為 <%= @purchase.end_time.strftime('%m/%d %H:%M') %>
              </div>
              
              <br>
              <h1 class="title is-5">您的購物清單</h1>
              <%= form_for [@group,@purchase, @order] do |f| %>
                <%= f.fields_for :ordered_items do |item_form| %>
                  <%= render 'ordered_item_fields', f: item_form %>
                <% end %>
                <div class="field">
                  <%= link_to_add_association '點餐',f,:ordered_items, class:'button is-success is-small is-outlined' %>
                </div>

                <div class="field">
                  <input type="submit" value="確定" class="button style-1  is-fullwidth is-small">
                </div>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
    <div class="column is-2">
      <%= link_to group_stores_path(@group), class:'btn-2' do %>
        <p>回到群組</p>
      <% end %>
      <%= link_to group_purchases_path(@group), class:'btn-2' do %>
        <p>進行中的團購</p>
      <% end %>
      
    </div>
  </div>
</div>

