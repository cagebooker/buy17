<div class="outsider">
  <div class="columns">
    <div class="column is-6 is-offset-2">
      <div class="title is-5">團購紀錄</div>
      <% @orders.each do |order| %>
        <div class="box">
          <div class="title is-6">
            <%= order.purchase.store.name %> |
            團購時間：<%= order.purchase.end_time.strftime("%m/%d %I:%M") %>
          </div>
          <div class="level">
            <div class="level-left">
              <% order.ordered_items.each do |order_item| %>
                <% if order_item.item.present? %>
                  <%= order_item.item.name %>  x
                  <%= order_item.quantity %> 
                <% end %>
              <% end %> 
            </div>
            <div class="level-right">
              $ <%= order.total_price %>
            </div>
          </div>
          
          
        </div>
      <% end %>
    </div>
    <div class="column is-2">
      <br><br>
      <%= link_to '回到首頁', '/', class:'button is-small is-fullwidth mb-2' %>
      <%= link_to '正參加的團購',pending_purchases_path,class:'button is-small is-fullwidth' %>
    </div>
  </div>
  
  
</div>